{
  "name": "snailjs",
  "version": "1.0.0",
  "private": true,
  "main": "build/server.js",
  "license": "MIT",
  "engines": {
    "node": "12.x"
  },
  "scripts": {
    "clean": "rm -fr build",
    "build": "npm run clean && NODE_ENV=production webpack",
    "watch": "NODE_ENV=development concurrently --prefix=name --prefix-length=30 --kill-others-on-fail -n \"webpack,server,browser\" \"webpack --watch\" \"wait-on build/server.js && nodemon build/server.js\" \"wait-on http-get://localhost:3100 && open http://localhost:3100\"",
    "start": "npm run clean && npm run watch",
    "start/prod": "NODE_ENV=production node build/server.js",
    "lint": "eslint . --ext .js --ext .jsx",
    "test": "jest --detectOpenHandles",
    "test/ci": "jest --forceExit",
    "prepare": "flow-typed install",
    "postbuild": "react-snap && npm run remove-public-server-routes",
    "remove-public-server-routes": "rm -fr build/public/server build/public/200.html build/public/404.html",
    "pretty": "prettier --write '{frontend,backend,test,__mocks__}/**/*.{js,jsx,scss}'",
    "pretty/test": "prettier --check '{frontend,backend,test,__mocks__}/**/*.{js,jsx,scss}'"
  },
  "dependencies": {
    "@babel/runtime": "7.7.2",
    "dotenv-flow": "3.1.0",
    "koa": "2.11.0",
    "koa-compress": "3.0.0",
    "koa-favicon": "2.0.1",
    "koa-logger": "3.2.1",
    "koa-mount": "4.0.0",
    "koa-router": "7.4.0",
    "koa-static": "5.0.0",
    "node-sass": "^4.14.1",
    "prop-types": "15.7.2",
    "react": "16.12.0",
    "react-dom": "16.12.0",
    "react-helmet": "5.2.1",
    "react-hot-loader": "4.12.18",
    "react-router-dom": "5.1.2",
    "sass-loader": "8.0.0",
    "source-map-support": "0.5.16",
    "styled-components": "4.4.1",
    "terser": "4.4.0"
  },
  "devDependencies": {
    "@babel/core": "7.7.2",
    "@babel/plugin-proposal-class-properties": "7.7.0",
    "@babel/plugin-proposal-decorators": "7.7.0",
    "@babel/plugin-transform-runtime": "7.6.2",
    "@babel/preset-env": "7.7.1",
    "@babel/preset-flow": "7.0.0",
    "@babel/preset-react": "7.7.0",
    "babel-eslint": "10.0.3",
    "babel-jest": "24.9.0",
    "babel-loader": "8.0.6",
    "babel-plugin-styled-components": "1.10.6",
    "babel-plugin-transform-react-remove-prop-types": "0.4.24",
    "concurrently": "^5.2.0",
    "copy-webpack-plugin": "5.0.5",
    "css-loader": "3.2.0",
    "eslint": "6.6.0",
    "eslint-config-airbnb": "18.0.1",
    "eslint-plugin-flowtype": "4.4.1",
    "eslint-plugin-flowtype-errors": "4.1.0",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "eslint-plugin-react": "7.16.0",
    "flow-bin": "0.112.0",
    "flow-typed": "2.6.2",
    "html-loader": "0.5.5",
    "html-webpack-plugin": "3.2.0",
    "jest": "24.9.0",
    "koa-webpack": "5.2.4",
    "nodemon": "1.19.4",
    "prettier": "1.19.1",
    "react-snap": "1.23.0",
    "react-test-renderer": "16.12.0",
    "style-loader": "1.0.0",
    "supertest": "4.0.2",
    "terser-webpack-plugin": "2.2.1",
    "wait-on": "3.3.0",
    "webpack": "4.41.2",
    "webpack-cli": "3.3.10",
    "webpack-node-externals": "1.7.2"
  },
  "browserslist": "> 0.25%, not dead",
  "jest": {
    "modulePaths": [
      "frontend",
      "backend"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "moduleNameMapper": {
      "\\.(css|scss)$": "<rootDir>/__mocks__/styleMock.js",
      "\\.(gif|ttf|eot|svg)$": "<rootDir>/__mocks__/fileMock.js"
    }
  },
  "nodemonConfig": {
    "ignore": [
      "test/*",
      "node_modules/*",
      "frontend/*",
      "flow-typed/*",
      "build/public/*",
      "package.json",
      "package-lock.json",
      "Makefile",
      "README.md"
    ]
  },
  "reactSnap": {
    "source": "build/public"
  },
  "resolutions": {
    "terser": "3.14.1"
  }
}
